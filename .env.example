# 主要应用配置
FLASK_APP=app.py
FLASK_ENV=development
DATABASE_URL=sqlite:///roundtable.db

# API 提供商配置
# ====================

# 默认使用的 API 提供商（oneapi, openai, anthropic, gemini, deepseek, siliconflow, volcengine, tencentcloud, aliyun）
DEFAULT_PROVIDER=oneapi

# OneAPI 配置 - 统一接口支持多种模型
ONEAPI_API_KEY=your_oneapi_key_here
ONEAPI_BASE_URL=https://api.oneapi.com/v1

# OpenAI 配置
OPENAI_API_KEY=your_openai_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic 配置
# ANTHROPIC_API_KEY=your_anthropic_key_here

# Google Gemini 配置
# GEMINI_API_KEY=your_gemini_key_here

# DeepSeek 配置
# DEEPSEEK_API_KEY=your_deepseek_key_here
# DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# SiliconFlow 配置
# SILICONFLOW_API_KEY=your_siliconflow_key_here
# SILICONFLOW_BASE_URL=https://api.ffa.chat/v1

# 火山引擎配置
# VOLCENGINE_API_KEY=your_volcengine_key_here
# VOLCENGINE_BASE_URL=https://open.volcengineapi.com

# 腾讯云配置
# TENCENTCLOUD_SECRET_ID=your_tencent_secret_id_here
# TENCENTCLOUD_SECRET_KEY=your_tencent_secret_key_here
# TENCENTCLOUD_REGION=ap-beijing

# 阿里云配置
# ALIYUN_ACCESS_KEY_ID=your_aliyun_key_id_here
# ALIYUN_ACCESS_KEY_SECRET=your_aliyun_key_secret_here
# ALIYUN_REGION=cn-hangzhou

# 模型配置
# ====================

# 代理模型映射 - 格式：provider:model_name
MODEL_A001=oneapi:gpt-4
MODEL_A002=anthropic:claude-3-sonnet
MODEL_A003=gemini:gemini-pro
MODEL_A004=deepseek:deepseek-chat
MODEL_A005=siliconflow:claude-3-opus
MODEL_A006=volcengine:moonshot-v1
MODEL_A007=tencentcloud:hunyuan
MODEL_A008=aliyun:qwen-turbo

# 模型默认配置 - 如果代理未指定模型则使用此配置
DEFAULT_MODEL=oneapi:gpt-3.5-turbo

# 模型参数
MAX_TOKENS=4096
TEMPERATURE=0.7
MAX_RETRIES=3
TIMEOUT=30

# 会议设置
DISCUSSION_ROUNDS=2
MAX_THREAD_DIALOGUE=20

# 安全设置
SECRET_KEY=your_secret_key_here
DEBUG=True

# 版本信息
APP_VERSION=1.2.0

# 备份设置
# ====================
ENABLE_AUTO_BACKUP=false
BACKUP_RETENTION_DAYS=30

# AWS S3 备份配置
# AWS_ACCESS_KEY_ID=your_aws_access_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
# AWS_REGION=us-east-1
# AWS_BUCKET=roundtable-backups
# AWS_PREFIX=backups/

# Google Cloud Storage 备份配置
# GCP_CREDENTIALS_FILE=gcp-credentials.json
# GCP_BUCKET=roundtable-backups
# GCP_PREFIX=backups/

# Azure Blob Storage 备份配置
# AZURE_CONNECTION_STRING=your_azure_connection_string_here
# AZURE_CONTAINER=roundtable-backups
# AZURE_PREFIX=backups/ 